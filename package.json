{
  "name": "hacker-news",
  "version": "1.0.0",
  "description": "React + TypeScript demonstration",
  "main": "index.js",
  "scripts": {
    "watch": "webpack-dev-server --no-inline --no-hot",
    "build": "webpack --config ./webpack.config.js",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nagafono/hacker-news.git"
  },
  "author": "Nikolai Agafonov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nagafono/hacker-news/issues"
  },
  "homepage": "https://github.com/nagafono/hacker-news#readme",
  "dependencies": {
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/react-addons-test-utils": "^0.14.25",
    "@types/react-test-renderer": "^16.9.2",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^25.1.0",
    "node-sass": "^4.13.1",
    "react-promise": "^3.0.2",
    "react-test-renderer": "^16.12.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/src/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)?$",
    "globals": {
      "__DEV__": true,
      "__RCTProfileIsProfiling": false,
      "__TS_CONFIG__": {
        "module": "commonjs",
        "jsx": "react"
      }
    }
  }
}
